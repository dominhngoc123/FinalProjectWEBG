{% extends 'base.html.twig' %}

{% block title %}Detail{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('index') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('user') }}">User</a>
        </li>
        <li class="breadcrumb-item active">
            Detail
        </li>
    </ol>
{% endblock %}

{% block display %}
    <div class="content">
        <div class="container">
            <!-- end row -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12">
                    <div class="card profile-header">
                        <div class="body">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-12">
                                    <div class="profile-image" style="text-align: center;"><img class="avatar-img" style="max-width: 100%; max-height: 100%; height: 336px;" src="https://bootdey.com/img/Content/avatar/avatar2.png" alt=""> </div>
                                </div>
                                <div class="col-lg-8 col-md-8 col-12">
                                    <div class="information-detail" style="height: 300px;">
                                        <h4 class="m-t-0 m-b-0">Name: {{ user.UserFullName }}</h4>
                                        <span class="job_post">Username: {{ user.username }}</span><br/>
                                        <span class="job_post">Address: {{ user.UserAddress }}</span><br/>
                                        <span class="job_post">Email: {{ user.UserEmail }}</span><br/>
                                        <span class="job_post">Birthday: {{ user.UserDOB ? user.UserDOB|date('d-m-Y') : '' }}</span><br/>
                                        <span class="job_post">Join at: {{ user.CreateAt ? user.CreateAt|date('d-m-Y') : '' }}</span><br/>
                                        <span class="job_post">Role:
                                            {% if 'ROLE_ADMIN' in user.Roles %}
                                                Admin
                                            {% else %}
                                                User
                                            {% endif %}</span>
                                    </div>
                                    <div class="float-md-right ">
                                        <a class="btn btn-primary custom-btn" style="text-decoration: none;" href="{{ path('update_user', {'id': user.id}) }}"><i class="fa fa-edit"></i>Edit</a>
                                        {% if user.Roles == '["ROLE_USER"]' %}
                                        <a class="btn btn-primary custom-btn" style="text-decoration: none;" href="{{ path('delete_user', {'id': user.id}) }}" onclick="return confirm('Do you want to delete this user?')"><i class="fa fa-trash"></i>Delete</a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- container -->
    </div>
{% endblock %}
