{% extends 'base.html.twig' %}

{% block title %}Manage user{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('index') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">User</li>
    </ol>
{% endblock %}

{% block display %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container profile-page">
        <div class="form-group">
            <form action="{{path('search_user_by_name')}}" method="POST">
                <input class="form-control" type="search" name="searchContent" required placeholder ="Search type by name...">
            </form>
        </div>
        {% if users != null %}
            <div class="row">
                {% for user in users %}
                    <div class="col-xl-6 col-lg-7 col-md-12 shadow">
                        <div class="profile-card profile-header">
                            <div class="profile-body">
                                <div class="row">
                                    <div class="col-lg-8 col-md-8 col-12">
                                        <h4 class="m-t-0 m-b-0">Fullname: {{ user.UserFullName }}</h4>
                                        <p>Username: {{ user.username }}</p>
                                        <p>Create By: {{ user.CreateBy }}</p>
                                        <p>Role:
                                        {% if 'ROLE_ADMIN' in user.roles %}
                                            Admin
                                        {% else %}
                                            User
                                        {% endif %}
                                        </p>
                                        <div>
                                            <a class="btn btn-primary custom-btn" style="text-decoration: none;" href="{{ path('show_user', {'id': user.id}) }}"><i class="fa fa-eye"></i>Detail</a>
                                            <a class="btn btn-info custom-btn" style="text-decoration: none;" href="{{ path('update_user', {'id': user.id}) }}"><i class="fa fa-edit"></i>Edit</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <br/>
            <div class="row">
                <div class="col-12">
                    <div class="text-right">
                        <ul class="pagination pagination-split mt-0 float-right">
                            <li class="page-item"><a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">«</span> <span class="sr-only">Previous</span></a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#">5</a></li>
                            <li class="page-item"><a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">»</span> <span class="sr-only">Next</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center">
                <p>No user found</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
