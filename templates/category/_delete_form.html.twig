<form id="delete_category_form" method="post" action="{{ path('delete_category', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete category {{ category.CategoryName }}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <a href="javascript:{}" onclick="document.getElementById('delete_category_form').submit()"><i class="fa fa-trash"></i></a>
</form>