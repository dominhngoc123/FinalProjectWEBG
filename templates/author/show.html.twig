{% extends 'base.html.twig' %}

{% block title %}Detail{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('index') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('author') }}">Author</a>
        </li>
        <li class="breadcrumb-item active">
            Detail
        </li>
    </ol>
{% endblock %}

{% block display %}
    <div class="content">
        <div class="container">
            <!-- end row -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12">
                    <div class="card profile-header">
                        <div class="body">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-12">
                                    <div class="profile-image" style="text-align: center;"><img class="avatar-img" style="max-width: 100%; max-height: 100%; height: 336px;" src="{% if author.AuthorImage != null %}
                                    {{ asset('assets/img/Author/' ~ author.AuthorImage) }}
                                    {% else %}
                                    https://bootdey.com/img/Content/avatar/avatar2.png
                                    {% endif %}
                                    " alt=""> </div>
                                </div>
                                <div class="col-lg-8 col-md-8 col-12">
                                    <div class="information-detail" style="height: 300px;">
                                        <h4 class="m-t-0 m-b-0">{{ author.AuthorFullName }}</h4>
                                        <span class="job_post">{{ author.AuthorStageName }}</span>
                                        <br>
                                        <span class="job_post">{{ author.CreateAt ? author.CreateAt|date('d-m-Y') : '' }}</span>
                                        <p>{{ author.AuthorDescription }}</p>
                                    </div>
                                    <div class="float-md-right ">
                                        <a class="btn btn-primary custom-btn" style="text-decoration: none;" href="{{ path('update_author', {'id': author.id}) }}"><i class="fa fa-edit"></i>Edit</a>
                                        <a class="btn btn-primary custom-btn" style="text-decoration: none;" href="{{ path('delete_author', {'id': author.id}) }}" onclick="return confirm('Do you want to delete author {{ author.AuthorFullName }}')"><i class="fa fa-trash"></i>Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- container -->
    </div>
{% endblock %}
