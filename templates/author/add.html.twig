{% extends "base.html.twig" %}

{% block title %}Add{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('index') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('author') }}">Author</a>
        </li>
        <li class="breadcrumb-item active">
            Add
        </li>
    </ol>
{% endblock %}

{% block display %}
    <div class="container col-md-6 mt-3 mb-3">
        <h2 class="text-center">ADD AUTHOR</h2>
        <div class="col md-6"></div>
        {{ form_start (authorForm) }}
        <div class="form-group">
            {{ form_label (authorForm.AuthorFullName)}}
            {{ form_widget (authorForm.AuthorFullName ,
                {
                    'attr' : {'class' : 'form-control'}
                })
            }}
        </div>
        <div class="form-group">
            {{ form_label (authorForm.AuthorStageName)}}
            {{ form_widget (authorForm.AuthorStageName ,
                {
                    'attr' : {'class' : 'form-control'}
                })
            }}
        </div>
        <div class="form-group">
            {{ form_label (authorForm.AuthorImage)}}
            {{ form_widget (authorForm.AuthorImage ,
                {
                    'attr' : {'class' : 'form-control'}
                })
            }}
        </div>
        <div class="form-group">
            {{ form_label (authorForm.AuthorDescription)}}
            {{ form_widget (authorForm.AuthorDescription ,
                {
                    'attr' : {'class' : 'form-control'}
                })
            }}
        </div>
        <div class="form-group text-center mt-3">
            <input class="btn btn-primary" type="submit" value="Add" />
        </div>
        {{ form_end (authorForm)}}
    </div>
{% endblock %}

