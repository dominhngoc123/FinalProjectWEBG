{% extends'base_login.html.twig' %}
{% block title %}Register{% endblock %}
{% block imageContent %}
    REGISTER
{% endblock %}
{% block display %}
    {{ form_start(registrationForm) }}
    <h3>Sign Up New Account</h3>
    <p>
        Enter your personal details below:
    </p>
    <div class="form-group">
        {{ form_label(registrationForm.user_full_name, 'Full name', {'label_attr': {'class': 'control-label visible-ie8 visible-ie9'}}) }}
        {{ form_row(registrationForm.user_full_name, {
            label: false
        }) }}
    </div>
    <div class="form-group">
        {{ form_label(registrationForm.user_address, 'Address', {'label_attr': {'class': 'control-label visible-ie8 visible-ie9'}}) }}
        {{ form_row(registrationForm.user_address, {
            label: false
        }) }}
    </div>
    <div class="form-group">
        {{ form_label(registrationForm.user_phone, 'Telephone', {'label_attr': {'class': 'control-label visible-ie8 visible-ie9'}}) }}
        {{ form_row(registrationForm.user_phone, {
            label: false
        }) }}
    </div>
    <div class="form-group">
        {{ form_label(registrationForm.user_DOB, 'Birthday', {'label_attr': {'class': 'control-label visible-ie8 visible-ie9'}}) }}
        {{ form_row(registrationForm.user_DOB, {
            label: false
        }) }}
    </div>
    <div class="form-group">
        {{ form_label(registrationForm.user_email, 'Email', {'label_attr': {'class': 'control-label visible-ie8 visible-ie9'}}) }}
        {{ form_row(registrationForm.user_email, {
            label: false
        }) }}
    </div>
    <p>
        Enter your account details below:
    </p>
    <div class="form-group">
        {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'control-label visible-ie8 visible-ie9'}}) }}
        {{ form_row(registrationForm.username, {label: false}) }}
    </div>
    <div class="form-group">
        {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'control-label visible-ie8 visible-ie9'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: false
        }) }}
    </div>
    <div class="form-group" style="display: block">
        {{ form_row(registrationForm.agreeTerms) }}
    </div>
    <div class="form-actions">
        <button id="register-back-btn" type="button" class="btn">
            <a style="text-decoration: none;" href="{{ path('app_login') }}"><i class="m-icon-swapleft"></i> Back </a></button>
        <button type="submit" id="register-submit-btn" class="btn blue pull-right">
            Sign Up <i class="m-icon-swapright m-icon-white"></i>
        </button>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
