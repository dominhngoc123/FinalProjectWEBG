{% extends 'base.html.twig' %}

{% block title %}Detail{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('index') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('order') }}">Order</a>
        </li>
        <li class="breadcrumb-item active">
            Detail
        </li>
    </ol>
{% endblock %}

{% block display %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    {% set total = 0 %}
    {% if order.OrderDetail != null  %}
        {% for od in order.OrderDetail %}
            {% set total = total + od.CurrentPrice * od.Quantity %}
        {% endfor %}
    {% endif %}
    <div class="content">
        <div class="container">
            <!-- end row -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12">
                    <div class="card profile-header">
                        <div class="body">
                            <div class="row" style="margin-top: 20px;">
                                <div class="col-lg-2 col-md-2"></div>
                                <div class="col-lg-8 col-md-8 col-12">
                                    <div class="information-detail">
                                        <h4 class="m-t-0 m-b-0"><strong>Customer</strong>: {{ order.User.UserFullName  }}</h4>
                                        <span class="job_post">Transaction date: {{ order.CreateAt ? order.CreateAt|date('d-m-Y') : '' }}</span>
                                        <table class="table">
                                            <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Product</th>
                                                <th scope="col">Price</th>
                                                <th scope="col">Quantity</th>
                                                <th scope="col">Subtotal</th>
                                                <th scope="col" colspan="2" class="text-center">Action</th>
                                                <th></th>
                                            </tr>
                                            </thead>
                                            {% set stt = 1 %}
                                            <tbody>
                                            {% if order.OrderDetail != null  %}
                                                {% for od in order.OrderDetail %}
                                                    <tr>
                                                        <th scope="row">{{ stt }}</th>
                                                        <td>{{ od.Book.BookTitle }}</td>
                                                        <td>{{ od.CurrentPrice }}</td>
                                                        <td>{{ od.Quantity }}</td>
                                                        <td>{{ od.CurrentPrice * od.Quantity }}</td>
                                                        <td class="text-center">
                                                            <a class="btn btn-primary"><i class="fa fa-edit"></i></a>
                                                        </td>
                                                        <td class="text-center">
                                                            <a class="btn btn-danger" href="{{ path('remove_order_detail', {'id': od.ID}) }}" onclick="return confirm('Do you want to delete this product from order?')"><i class="fa fa-trash"></i></a>
                                                        </td>
                                                    </tr>
                                                    {% set stt = stt + 1 %}
                                                {% endfor %}
                                                    <tr>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <th scope="row">Total</th>
                                                        <td>{{ total }}</td>
                                                        <td></td>
                                                        <td></td>
                                                    </tr>
                                            {% else %}
                                                <tr>
                                                    <th scope="row" colspan="5" class="text-left">"No product found"</th>
                                                </tr>
                                            {% endif %}
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="float-md-right ">
                                        <a class="btn btn-primary custom-btn" style="text-decoration: none;" href="{{ path('update_order', {'id': order.ID}) }}"><i class="fa fa-edit"></i>Edit</a>
                                        <a class="btn btn-danger custom-btn" style="text-decoration: none;" href="{{ path('delete_order', {'id': order.ID}) }}" onclick="return confirm('Do you want to delete this order')"><i class="fa fa-trash"></i>Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- container -->
    </div>
{% endblock %}
