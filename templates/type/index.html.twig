{% extends 'base.html.twig' %}

{% block title %}Manage type{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('index') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Type</li>
    </ol>
{% endblock %}

{% block display %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container profile-page">
        <div class="form-group">
            <form action="{{path('search_type_by_name')}}" method="POST">
                <input class="form-control" type="search" name="$type_name" required placeholder ="Search type by name...">
            </form>
        </div>
        <a href = "{{ path('add_type') }}">
            <button class="btn btn-primary"><i class="fa fa-plus"></i><span>  Add</span></button>
        </a>
        {% if categories != null %}
        <div class="row">
            {% for type in categories %}
            <div class="col-xl-6 col-lg-7 col-md-12 shadow">
                <div class="profile-card profile-header">
                    <div class="profile-body">
                        <div class="row">
                            <div class="col-lg-8 col-md-8 col-12">
                                <h4 class="m-t-0 m-b-0">{{ type.TypeName }}</h4>
                                <p>{{ type.TypeDescription }}</p>
                                <div>
                                    <a class="btn btn-primary custom-btn" style="text-decoration: none;" href="{{ path('show_type', {'id': type.id}) }}"><i class="fa fa-eye"></i>Detail</a>
                                    <a class="btn btn-info custom-btn" style="text-decoration: none;" href="{{ path('update_type', {'id': type.id}) }}"><i class="fa fa-edit"></i>Edit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
            <br/>
        <div class="row">
            <div class="col-12">
                <div class="text-right">
                    <ul class="pagination pagination-split mt-0 float-right">
                        <li class="page-item"><a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">«</span> <span class="sr-only">Previous</span></a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                        <li class="page-item"><a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">»</span> <span class="sr-only">Next</span></a></li>
                    </ul>
                </div>
            </div> 
        </div>
        {% else %}
            <div class="text-center">
                <p>No type found</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
